{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "plugin:prettier/recommended",
        "prettier/react"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "prettier/prettier":[
        "error",
        {
            "singleQuote": true,
            "semi": true,
            "trailingComma": "all",
            "arrowParens": "avoid"
        }
      ]
    },
    "overrides": [
      {
        "files": ["**/*.ts", "**/*.tsx"],
        "rules": {
          "no-unused-vars": ["off"],
          "no-undef": ["off"],
          "react/display-name": ["off"]
        }
      }
    ]
}
