{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "config/*": ["./src/config/*"],
      "modules/*": ["./src/modules/*"],
      "shared/*": ["./src/shared/*"]
    },

    "outDir": "./dist",
    "experimentalDecorators": true,
    "typeRoots" : [
      "node_modules/@types",
      "./src/@types"
    ] 
  }
}
